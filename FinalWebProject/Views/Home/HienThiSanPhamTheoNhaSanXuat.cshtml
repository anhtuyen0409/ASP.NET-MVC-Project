@model IEnumerable<FinalWebProject.Models.SanPham>
@{
    ViewBag.Title = "HienThiSanPhamTheoNhaSanXuat";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Danh sách sản phẩm</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg">
                            <img src="~/template/img/@item.HinhAnh" alt="Alternate Text" />
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Details", new {id=item.MaSP})">@item.TenSP</a></h6>
                            <h5>@item.GiaTien.Value.ToString("#,##0").Replace(',', '.') VNĐ</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/template/img/banner1.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/template/img/banner1.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->
<hr />

